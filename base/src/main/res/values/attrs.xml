<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--标题栏-->
    <declare-styleable name="YangTitleBar">
        // 标题
        <attr name="title" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleVisible" format="boolean" />
        // 状态栏颜色
        <attr name="statusBarColor" format="color" />
        // 左边图标
        <attr name="leftIcon" format="reference" />
        <attr name="leftIconVisible" format="boolean" />
        // 右边文字
        <attr name="rightText" format="string" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="rightTextVisible" format="boolean" />
        // 右边图标
        <attr name="rightIcon" format="reference" />
        <attr name="rightIconVisible" format="boolean" />
    </declare-styleable>

    <!--圆形的ImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!--圆形or圆角的ImageView-->
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>

</resources>