<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/common_bg_white_5dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/dialog_prompt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/space_10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="温馨提示"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dialog_prompt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10dp"
            android:layout_marginRight="@dimen/space_10dp"
            android:layout_marginBottom="@dimen/space_15dp"
            android:gravity="center"
            android:minHeight="@dimen/space_50dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_16sp" />

        <View style="@style/style_line_horizontal_gray3" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_prompt_cancel"
                android:layout_width="@dimen/space_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_16sp" />

            <View
                android:id="@+id/dialog_prompt_line"
                style="@style/style_line_vertical_gray3" />

            <TextView
                android:id="@+id/dialog_prompt_confirm"
                android:layout_width="@dimen/space_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/font_size_16sp" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="15dp"
        android:background="@drawable/yuan_tips"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/carout_alert_custo"/>

</FrameLayout>