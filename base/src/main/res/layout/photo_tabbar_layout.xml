<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/space_10dp"
        android:paddingRight="@dimen/space_10dp"
        android:src="@mipmap/left_back" />

    <Button
        android:id="@+id/commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_15dp"
        android:background="@drawable/photo_action_btn"
        android:enabled="false"
        android:minHeight="@dimen/space_1dp"
        android:minWidth="@dimen/space_1dp"
        android:paddingBottom="@dimen/space_4dp"
        android:paddingLeft="@dimen/space_8dp"
        android:paddingRight="@dimen/space_8dp"
        android:paddingTop="@dimen/space_4dp"
        android:text="确定"
        android:textColor="@drawable/photo_default_text_color"
        android:textSize="@dimen/font_size_14sp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="图片"
        android:textColor="@color/light_black"
        android:textSize="@dimen/font_size_18sp" />

    <View
        style="@style/style_line_horizontal_gray2"
        android:layout_alignParentBottom="true" />

</RelativeLayout>