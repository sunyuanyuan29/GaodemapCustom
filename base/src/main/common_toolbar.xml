<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_color"
    android:orientation="vertical">

    <com.yang.base.widgets.StatusBarView
        android:id="@+id/common_toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trans" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height">

        <android.support.v7.widget.Toolbar
            android:id="@+id/common_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentInsetLeft="@dimen/space_0dp"
            app:contentInsetStart="@dimen/space_0dp"
            app:navigationIcon="@mipmap/back_white"
            app:subtitle=" "
            app:title=" " />
        <!--app:logo="@mipmap/logo"-->
        <!--app:title="标题"-->
        <!--app:subtitle="子标题"-->

        <TextView
            android:id="@+id/common_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/space_50dp"
            android:layout_marginRight="@dimen/space_50dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_17sp" />

    </RelativeLayout>

</LinearLayout>