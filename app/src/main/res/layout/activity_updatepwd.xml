<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar_theme" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_10dp"
        android:layout_marginTop="@dimen/space_20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray1"
            android:layout_marginTop="@dimen/space_10dp"
            android:text="密码为8-16位，须包含数字、字母、符号中至少2种元素"/>


        <EditText
            android:layout_width="match_parent"
            android:id="@+id/input_old"
            android:background="@color/white"
            android:hint="请输入旧密码"
            android:layout_marginTop="@dimen/space_30dp"
            android:inputType="textPassword"
            android:textSize="@dimen/font_size_20sp"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/new_pwd"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:hint="请输入新密码"
            android:layout_marginTop="@dimen/space_30dp"
            android:inputType="textPassword"
            android:textSize="@dimen/font_size_20sp"
            android:layout_height="wrap_content"/>



        <TextView android:id="@+id/forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray1"
            android:textSize="@dimen/font_size_12sp"
            android:layout_marginTop="@dimen/space_20dp"
            android:text="忘记旧密码或者没有密码 >"/>




            <TextView
                android:id="@+id/update_pwd"
                style="@style/ThemeColorBorderRadiusBtn"
                android:layout_marginBottom="@dimen/space_0dp"
                android:layout_marginLeft="@dimen/space_0dp"
                android:layout_marginRight="@dimen/space_0dp"
                android:layout_marginTop="@dimen/space_40dp"
                android:text="确定" />


    </LinearLayout>





</LinearLayout>