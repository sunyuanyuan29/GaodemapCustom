<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar_theme" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/space_30dp"
        android:paddingLeft="@dimen/space_10dp"
        android:paddingRight="@dimen/space_10dp"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/space_0dp"
        android:layout_weight="1"
        android:background="@color/cp_color_gray_light"
        android:layout_height="@dimen/space_0.5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10dp"
            android:layout_marginRight="@dimen/space_10dp"
            android:text="舒适车型订单"/>

        <View
            android:layout_width="@dimen/space_0dp"
            android:layout_weight="1"
            android:background="@color/cp_color_gray_light"
            android:layout_height="@dimen/space_0.5dp"/>

    </LinearLayout>


    <TextView android:id="@+id/driver_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35.89元"
        android:layout_marginTop="@dimen/space_20dp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_size_26sp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/charge_list"
        android:layout_marginTop="@dimen/space_20dp"
        android:layout_width="match_parent"
        android:background="@drawable/common_bg_white_5dp"
        android:layout_height="@dimen/space_0dp"
        android:layout_weight="1"/>


    <TextView android:id="@+id/jijia_guize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计价规则"
        android:layout_marginBottom="@dimen/space_10dp"
        android:drawablePadding="@dimen/space_10dp"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@mipmap/rightarrow"/>

</LinearLayout>