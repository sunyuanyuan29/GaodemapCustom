<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff9600"
        android:padding="@dimen/space_15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_10dp"
            android:gravity="center_horizontal"
            android:background="@drawable/common_bg_white_5dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="493.71元"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16sp"
                android:text="今日流水"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/space_15dp"
                    android:layout_height="@dimen/space_15dp"
                    android:src="@mipmap/yuan_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基础车费"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="@dimen/space_0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_10dp"
                    android:layout_marginRight="@dimen/space_10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_dash_line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="466.71元"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/space_20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/space_15dp"
                    android:layout_height="@dimen/space_15dp"
                    android:src="@mipmap/yuan_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奖励"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="@dimen/space_0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_10dp"
                    android:layout_marginRight="@dimen/space_10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_dash_line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="0.0元"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/space_20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/space_15dp"
                    android:layout_height="@dimen/space_15dp"
                    android:src="@mipmap/yuan_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="@dimen/space_0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_10dp"
                    android:layout_marginRight="@dimen/space_10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_dash_line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="2.71元"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10dp"
                android:text="包含高速费、过桥费、停车费、乘客加价、远程调度费、感谢红包和其他"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/space_3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_4dp"
            android:layout_marginBottom="@dimen/space_4dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_5dp"
            android:text="流水明细"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="共3单"/>

    </LinearLayout>

    <include layout="@layout/view_liner_05dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/flowing_water_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>










</LinearLayout>