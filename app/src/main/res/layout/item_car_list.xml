<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/space_3dp"
    android:layout_margin="@dimen/space_10dp"
    android:background="@color/activity_bg"
    app:cardElevation="1dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout android:id="@+id/tips_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_10dp"
            android:paddingRight="@dimen/space_10dp"
            android:paddingTop="@dimen/space_5dp"
            android:paddingBottom="@dimen/space_5dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:layout_marginLeft="@dimen/space_10dp"
            android:layout_marginRight="@dimen/space_10dp"
            android:background="@drawable/common_bg_gray3_5dp"
            android:orientation="horizontal">

            <TextView android:id="@+id/tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray1"
                android:text="您的车辆信息不完整，建议您尽快补齐"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:visibility="gone"
                android:text="去完善 >"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="@dimen/space_20dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView android:id="@+id/name_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试车辆（白色）"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_20sp"/>

                <TextView android:id="@+id/plateNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:text="赣A88888"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/font_size_14sp"/>

            </LinearLayout>

            <ImageView android:id="@+id/examine_status"
                android:layout_width="@dimen/space_60dp"
                android:layout_height="@dimen/space_60dp"
                android:layout_marginLeft="@dimen/space_60dp"
                android:layout_gravity="right|center_vertical"
                />
        </FrameLayout>

        <ImageView android:id="@+id/appearance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_100dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/space_20dp"
            android:layout_marginRight="@dimen/space_20dp"
            android:src="@mipmap/test_car"/>



        <LinearLayout android:id="@+id/setDefalut_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_10dp"
            android:orientation="horizontal">

            <ImageView android:id="@+id/is_defalut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/check_grey"/>

            <TextView
                android:layout_width="match_parent"
                android:gravity="left"
                android:padding="@dimen/space_10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:text="设为当前车辆"/>


        </LinearLayout>




    </LinearLayout>



</androidx.cardview.widget.CardView>

