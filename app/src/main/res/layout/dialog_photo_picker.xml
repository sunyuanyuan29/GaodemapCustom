<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trans"
    android:orientation="vertical"
    android:padding="@dimen/space_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_bg_white_5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_photo_picker_photograph"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45dp"
            android:gravity="center"
            android:text="拍照"
            android:textColor="@color/light_black"
            android:textSize="@dimen/font_size_16sp" />

        <View
            style="@style/style_line_horizontal_gray3"
            android:layout_marginLeft="@dimen/space_10dp"
            android:layout_marginRight="@dimen/space_10dp" />

        <TextView
            android:id="@+id/dialog_photo_picker_album"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45dp"
            android:gravity="center"
            android:text="从相册选择"
            android:textColor="@color/light_black"
            android:textSize="@dimen/font_size_16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_photo_picker_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45dp"
        android:layout_marginTop="@dimen/space_10dp"
        android:background="@drawable/common_bg_white_5dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/gray1"
        android:textSize="@dimen/font_size_16sp" />

</LinearLayout>