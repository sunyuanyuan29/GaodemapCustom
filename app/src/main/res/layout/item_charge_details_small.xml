<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:lxj="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray2"
            android:textSize="@dimen/font_size_12sp"
            android:text="普通时段"/>

        <com.android.orangetravel.ui.widgets.view.DashedLineView
            android:id="@+id/line_1"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="@dimen/space_5dp"
            android:layout_marginLeft="@dimen/space_10dp"
            android:layout_marginRight="@dimen/space_10dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/space_8dp"
            lxj:lineColor="@color/gray2"
            lxj:lineLength="10dp"
            lxj:lineSpace="@dimen/space_5dp" />

        <TextView android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_12sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray2"
            android:text="247.9元"/>
    </LinearLayout>

</LinearLayout>







