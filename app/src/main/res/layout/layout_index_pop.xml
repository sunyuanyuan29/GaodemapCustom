<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round"
    android:orientation="vertical">


<!--    <com.android.orangetravel.base.widgets.StatusBarView-->
<!--        android:id="@+id/id_status_bar_view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="@color/trans" />-->



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10dp">

        <TextView
            android:id="@+id/tv_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10dp"
            android:text="返回"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="周边"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_18sp"
            />

    </RelativeLayout>

    <include layout="@layout/view_liner_05dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_20dp">


        <FrameLayout
            android:id="@+id/hot_map"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/index_menu_check_bg">

            <ImageView
                android:id="@+id/hot_map_rightImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@mipmap/zb_maplevel_selected" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/space_10dp"
                android:text="路况"
                android:textColor="@color/gray" />

        </FrameLayout>

        <FrameLayout android:id="@+id/satellite"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20dp"
            android:layout_weight="1"
            android:background="@drawable/index_menu_bg">

            <ImageView android:id="@+id/satellite_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:visibility="invisible"
                android:src="@mipmap/zb_maplevel_selected" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/space_10dp"
                android:text="卫星"
                android:textColor="@color/gray" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20dp"
            android:visibility="invisible"
            android:layout_weight="1"
            android:background="@drawable/index_menu_check_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@mipmap/zb_maplevel_selected" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/space_10dp"
                android:text="路况"
                android:textColor="@color/gray" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_20dp"
        android:paddingRight="@dimen/space_20dp"
        android:orientation="horizontal">



    <View
        android:layout_width="@dimen/space_0dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/space_10dp"
        android:layout_height="@dimen/space_0.5dp"
        android:background="@color/line_light_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生活服务"/>

    <View
        android:layout_width="@dimen/space_0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/space_10dp"
        android:layout_height="@dimen/space_0.5dp"
        android:background="@color/line_light_color"/>

    </LinearLayout>

    <TextView android:id="@+id/go_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20dp"
        android:layout_marginTop="@dimen/space_10dp"
        android:layout_marginRight="@dimen/space_20dp"
        android:background="@drawable/index_search_bg"
        android:drawableLeft="@mipmap/index_search"
        android:drawablePadding="@dimen/space_10dp"
        android:padding="@dimen/space_10dp"
        android:text="您想去哪儿" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_20dp"
        android:paddingTop="@dimen/space_20dp"
        android:paddingBottom="@dimen/space_20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView android:id="@+id/cesuo_img"
                android:layout_width="@dimen/space_50dp"
                android:layout_height="@dimen/space_50dp"
                android:padding="@dimen/space_10dp"
                android:background="@drawable/border_one_yuan"
                android:src="@mipmap/cesuo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/space_10dp"
                android:layout_height="wrap_content"
                android:text="厕所"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/space_20dp"
            android:orientation="vertical">

            <ImageView  android:id="@+id/jiayou_img"
                android:layout_width="@dimen/space_50dp"
                android:layout_height="@dimen/space_50dp"
                android:padding="@dimen/space_10dp"
                android:background="@drawable/border_one_yuan"
                android:src="@mipmap/jiayou" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/space_10dp"
                android:layout_height="wrap_content"
                android:text="加油"/>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>






