<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/space_3dp"
    android:background="@color/activity_bg"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/way"
                android:layout_width="wrap_content"
                android:text="商务车"
                android:paddingLeft="@dimen/space_5dp"
                android:paddingRight="@dimen/space_5dp"
                android:paddingTop="@dimen/space_2dp"
                android:paddingBottom="@dimen/space_2dp"
                android:layout_height="wrap_content"
                android:textColor="#426a90"
                android:background="@drawable/common_bg_gray3_5dp"/>

            <TextView android:id="@+id/add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20dp"
                android:text="05：21:46"
                android:textColor="@color/black"/>

            <TextView android:id="@+id/hint"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20dp"
                android:text="乘客取消"
                android:textColor="@color/gray"/>


        </LinearLayout>

        <TextView android:id="@+id/sendTime"
            android:layout_width="wrap_content"
            android:text="01月-14日09:56:36接单"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10dp"
            android:paddingLeft="@dimen/space_5dp"
            android:paddingRight="@dimen/space_5dp"
            android:paddingTop="@dimen/space_2dp"
            android:paddingBottom="@dimen/space_2dp"
            android:textColor="@color/gray1"
            android:background="@drawable/common_bg_gray3_5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yuan_theme"/>

            <TextView android:id="@+id/origin"
                android:layout_width="wrap_content"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"
                android:text="南昌国际机场-T2-1F到达层停车场广告牌旁"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yuan_green"/>

            <TextView android:id="@+id/destination"
                android:layout_width="wrap_content"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"
                android:text="南昌县莲塘镇上峰景城8栋一单元1202"/>


        </LinearLayout>

        <TextView android:id="@+id/type_name"
            android:layout_width="wrap_content"
            android:text="接送机"
            android:paddingLeft="@dimen/space_5dp"
            android:paddingRight="@dimen/space_5dp"
            android:paddingTop="@dimen/space_2dp"
            android:paddingBottom="@dimen/space_2dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:layout_height="wrap_content"
            android:textColor="#426a90"
            android:background="@drawable/common_border_gray3_5dp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>