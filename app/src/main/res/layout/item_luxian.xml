<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/space_10dp"
    android:paddingBottom="@dimen/space_10dp"
    android:orientation="vertical"
   >

    <TextView android:id="@+id/tips_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_12sp"
        android:textColor="@color/gray1" />

    <TextView android:id="@+id/nat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_18sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView android:id="@+id/juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray2"
            android:textSize="@dimen/font_size_12sp" />

        <ImageView android:id="@+id/light_image"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/space_5dp"
            android:src="@mipmap/dph_fullscreen_trafficlight_day"
            android:layout_height="@dimen/space_10dp"/>


        <TextView android:id="@+id/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"
            android:layout_marginLeft="@dimen/space_2dp"
            android:textColor="@color/gray2"
            android:textSize="@dimen/font_size_12sp"/>

    </LinearLayout>

</LinearLayout>